<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_greet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/activity_main_ask_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quel est votre Prénom?"
        android:gravity="center"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/avtivity_main_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Entrez Votre Prénom!"
        />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Let's Play"
        />

</LinearLayout>